#!/usr/bin/env python3

import json
import sys
from bottle import get, run, HTTPResponse


@get("/get_proxy_url")
def get_proxy_url():
    resp = {
        "proxy_url": "socks5://localhost:1080",
    }
    return HTTPResponse(
        body=json.dumps(resp),
        status=200,
        headers={"Content-Type": "application/json"},
    )


run(host="localhost", port=int(sys.argv[1]))
